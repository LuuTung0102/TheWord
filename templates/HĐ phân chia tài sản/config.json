        {"name":"HN_SO","label":"Số","type":"text","required":true},
        {"name":"Noi_XN","label":"Nơi xác nhận","type":"textarea","required":true},
        {"name":"Dia_Chi","label":"Địa chỉ","type":"text","placeholder":"VD: Buôn Ma Thuột","required":true},
        {"name":"Ngay","label":"Ngày tháng năm","type":"date","required":true},
