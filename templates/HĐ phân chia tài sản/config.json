{
  "templates": [
    {
      "id": "hd-pc-test",
      "filename": "test.docx",
      "name": "Hợp đồng phân chia tài sản thừa kế",
      "description": "Phân chia tài sản thừa kế",
      "groups": ["NTK", "NM", "MP", "LAND"],
      "placeholders": {
        "NTK": ["MEN1", "MEN2", "MEN3", "MEN4", "MEN5", "MEN6"],
        "NM": ["MEN7"],
        "MP": ["MEN8", "MEN9"],
        "LAND": ["INFO"]
      }
    },
    { 
      "id": "hd-pc-ts",
      "filename": "Phân chia tài sản.docx",
      "name": "Hợp đồng phân chia tài sản thừa kế",
      "description": "Phân chia tài sản thừa kế",
      "groups": ["NTK", "NM", "MP", "LAND"],
      "placeholders": {
        "NTK": ["MEN1", "MEN2", "MEN3", "MEN4", "MEN5", "MEN6"],
        "NM": ["MEN7"],
        "MP": ["MEN8", "MEN9"],
        "LAND": ["INFO"]
      }
    }
  ],

  "groups": [
    {
      "id": "NTK",
      "label": "Người thừa kế",
      "order": 1,
      "description": "Những người được thừa kế tài sản"
    },
    {
      "id": "NM",
      "label": "Người mất",
      "order": 2,
      "description": "Người để lại tài sản thừa kế"
    },
    {
      "id": "MP",
      "label": "Bố/mẹ người mất",
      "order": 3,
      "description": "Bố mẹ của người mất (nếu có)"
    },
    {
      "id": "LAND",
      "label": "Thông tin thửa đất",
      "order": 4,
      "description": "Thông tin đất đai"
    }
  ],

  "fieldSchemas": {
    "PersonalInfo": {
      "description": "Thông tin cá nhân",
      "applicableTo": ["NTK", "NM", "MP"],
      "fields": [
        { "name": "Gender", "label": "Giới tính", "type": "select", "options": ["Ông", "Bà"], "defaultValue": "Ông", "required": true },
        { "name": "Name", "label": "Họ và tên", "type": "text", "required": true },
        { "name": "Date", "label": "Ngày sinh", "type": "date", "required": true },
        { "name": "CCCD", "label": "CCCD", "type": "number", "required": true },
        { "name": "Noi_Cap", "label": "Nơi cấp", "type": "select", "options": ["Cục Cảnh sát QLHC về TTXH", "Công an T. Đắk Lắk"], "required": true },
        { "name": "Ngay_Cap", "label": "Ngày cấp", "type": "date", "required": true },
        { "name": "Address", "label": "Địa chỉ thường trú", "type": "address-select", "required": true }
      ]
    },

    "LandInfo": {
      "description": "Thông tin đất đai",
      "applicableTo": ["LAND"],
      "fields": [
        { "name": "QSH", "label": "Quyền sử dụng đất", "type": "text", "required": true },
        { "name": "So_so", "label": "Số sổ", "type": "text", "required": true },
        { "name": "Ngay_CapD", "label": "Ngày cấp", "type": "date", "required": true },
        { "name": "Thua_dat_so", "label": "Thửa đất số", "type": "text", "required": true },
        { "name": "Ban_do_so", "label": "Bản đồ số", "type": "text", "required": true },
        { "name": "S", "label": "Diện tích (m²)", "type": "number", "required": true },
        { "name": "Loai_Dat", "label": "Loại đất", "type": "land_type", "required": true },
        { "name": "Loai_Dat_F", "label": "Loại đất (có diện tích)", "type": "land_type_size", "required": true },
        { "name": "HTSD_R", "label": "Sử dụng riêng (m²)", "type": "number", "required": true },
        { "name": "HTSD_C", "label": "Sử dụng chung (m²)", "type": "number", "required": true },
        { "name": "THSD", "label": "Thời hạn sử dụng", "type": "textarea", "required": false },
        { "name": "AddressD", "label": "Địa chỉ thửa đất", "type": "address-select", "required": true },
        { "name": "TTGLVD", "label": "TT tài sản gắn liền", "type": "textarea", "required": false },
        { "name": "Money", "label": "Giá chuyển nhượng", "type": "currency", "required": true },
        { "name": "MoneyText", "label": "Giá chuyển nhượng (chữ)", "type": "text", "hidden": true, "required": false },
        { "name": "Responsibility", "label": "Bên chịu trách nhiệm thuế phí", "type": "select", "options": ["A", "B"], "required": true },
        { "name": "Note", "label": "Ghi chú", "type": "textarea", "required": false }
      ]
    }
  },

  "fieldMappings": [
    {
      "group": "NTK",
      "schema": "PersonalInfo",
      "subgroups": [
        { "id": "MEN1", "label": "Người thừa kế", "visible": true },
        { "id": "MEN2", "label": "Người thừa kế", "visible": false },
        { "id": "MEN3", "label": "Người thừa kế", "visible": false },
        { "id": "MEN4", "label": "Người thừa kế", "visible": false },
        { "id": "MEN5", "label": "Người thừa kế", "visible": false },
        { "id": "MEN6", "label": "Người thừa kế", "visible": false }
      ],
      "suffixes": ["1", "2", "3", "4", "5", "6"]
    },
    {
      "group": "NM",
      "schema": "PersonalInfo",
      "subgroups": [
        { "id": "MEN7", "label": "Người mất", "visible": true}
      ],
      "suffixes": ["7"]
    },
    {
      "group": "MP",
      "schema": "PersonalInfo",
      "subgroups": [
        { "id": "MEN8", "label": "Cha người mất", "visible": false },
        { "id": "MEN9", "label": "Mẹ người mất", "visible": false }
      ],
      "suffixes": ["8", "9"],
      "comment": "Cả bố và mẹ đều visible mặc định (khác với rule thông thường)"
    },
    {
      "group": "LAND",
      "schema": "LandInfo",
      "subgroups": [
        { "id": "INFO", "label": "Thông tin đất đai", "visible": false }
      ]
    }
  ]
}
